// Variables
$tile-size = 100px;
$num-tiles = 4;
$container-size = $tile-size * $num-tiles;

// Estilos
body {
  font-family: sans-serif;
  text-align: center;
}

h1 {
  margin-top: 20px;
}

#tiles-container {
  margin-top: 50px;
  width: $container-size;
  height: $container-size;
  border: 2px solid black;
  border-radius: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
  overflow: hidden;
  justify-content: center; /* Agregamos esta propiedad */
}

.tile {
  width: $tile-size;
  height: $tile-size;
  border: 2px solid black;
  background-size: cover;
  transition: transform 0.3s ease;
}

